<Window x:Class="ThemedContactManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ThemedContactManager.Views"
        Title="Contact Manager" Height="600" Width="400"
        Background="{DynamicResource PrimaryBackground}"
        Foreground="{DynamicResource PrimaryText}">
    <Grid Background="{DynamicResource PrimaryBackground}">
        <views:ContactListView />

        <Button x:Name="ThemeToggleButton"
                Content="🌙 Dark Mode"
                Background="{DynamicResource Accent}"
                Foreground="{DynamicResource ToggleText}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="ToggleTheme_Click"/>
    </Grid>
</Window>