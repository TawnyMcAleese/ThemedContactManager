<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBackgroundColor">#000000</Color>  
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>        
    <Color x:Key="AccentColor">#007ACC</Color>            
    <Color x:Key="ToggleTextColor">#FFFFFF</Color>        

    <SolidColorBrush x:Key="PrimaryBackground" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryText" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="ToggleText" Color="{StaticResource ToggleTextColor}"/>
</ResourceDictionary>
